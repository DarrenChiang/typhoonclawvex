
#include <Math.h>
#include <MIDI.h>

const int potIn1 = A0;
const int potIn2 = A1;
const int potIn3 = A2;
const int potIn4 = A3;
const int digIn1 = 2;
const int digIn3 = 3;
const int digIn4 = 4;
const int digIn5 = 5;

int RawValue1 = 0;
int RawValue2 = 0;
int RawValue3 = 0;
int RawValue4 = 0;
int RawValueButton = 0;
int sharp = 0;
int flat = 0;
int noSig = 0;

int _note, _key, _range, _volume;
int count=0;
int now;

int stepArr[] = {
  0,2,4,5,7,9,11,12};

void noteOn(byte channel, byte pitch, byte velocity) {
  MIDIEvent noteOn = {
    0x09, 0x90 | channel, pitch, velocity  };
  MIDIUSB.write(noteOn);
}

void noteOff(byte channel, byte pitch, byte velocity) {
  MIDIEvent noteOff = {
    0x08, 0x80 | channel, pitch, velocity  };
  MIDIUSB.write(noteOff);
}

void playNote(int note, int t){
  noteOn(0, note, 64);
  MIDIUSB.flush();
  delay(t);

  noteOff(0, note, 64);
  MIDIUSB.flush();
}
String notes[] = {
  "C","C#","D","D#","E","F","F#","G","G#","A","A#","B"};
//determine if a note has a key signature
boolean hasSignature(int _note){
  _note -= ((_note)/12)*12;
  return notes[_note].length()!=1;
}

//determine the accidental of a note, 1 for sharp, 0 for original, -1 for flat
int accidentals(int _note, int a) {
  switch(a) {
  case 0:
    return 0;
  case 1:
    return (hasSignature(_note))?0:1;
  case 2:
    return (hasSignature(_note))?-1:0;
  case 4:
    return (hasSignature(_note))?-2:-1;
  default:
    return 0;
  }		
}

void setup() {
  // put your setup code here, to run once:
  pinMode(potIn1, INPUT);
  pinMode(potIn2, INPUT);
  pinMode(potIn3, INPUT);

  pinMode(digIn1, INPUT);
  pinMode(digIn3, INPUT);
  pinMode(digIn4, INPUT);
  
  Serial.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly: 
  RawValue1 = analogRead(potIn1);
  RawValue2 = analogRead(potIn2);
  RawValue3 = analogRead(potIn3);

  RawValueButton = digitalRead(digIn1);
  sharp = digitalRead(digIn3);
  flat = digitalRead(digIn4);
  noSig = digitalRead(digIn5);
  
  _key = (int)((double)RawValue1/1023*11);
  _range = (int)((double)RawValue3/1023*2+4);
  _note = _key+stepArr[(int)((double)RawValue2/1023*7)]+_range*12;
  _note += accidentals(_note, sharp+noSig*2+flat*4);

  if(RawValueButton == LOW){
    noteOn(0, _note, 100);
    MIDIUSB.flush();
    while(RawValueButton==LOW){
      delay(1);
      RawValueButton = digitalRead(digIn1);
    }
  }  

  noteOff(0,_note,100);
  MIDIUSB.flush();
  delay(100);
}

